import requests


def main():
    url = "{{baseUrl}}/generate/video/pixverse/generation"
    payload = {
        "model": "{{model}}",
        "prompt": "A man and a woman hugging",
        "image_url": "https://images.pexels.com/photos/733872/pexels-photo-733872.jpeg",
        "tail_image_url": "https://storage.googleapis.com/falserverless/juggernaut_examples/QEW5VrzccxGva7mPfEXjf.png",
        "style": "anime",
        "aspect_ratio": "16:9"
    }
    headers = {"Authorization": "Bearer {{apiKey}}", "Content-Type": "application/json"}

    response = requests.post(url, json=payload, headers=headers)
    print("Generation:", response.json())


if __name__ == "__main__":
    main()
